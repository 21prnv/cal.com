{
  "extends": "@calcom/tsconfig/react-library.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "outDir": "built-types",
    "baseUrl": ".",
    "paths": {
      "~/*": ["/*"],
      "@components/*": ["components/*"],
      "@pages/*": ["pages/*"],
      "@lib/*": ["lib/*"],
      "@server/*": ["server/*"],
      "@prisma/client/*": ["@calcom/prisma/client/*"]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true,
  },
  "references": [
    {
      "path": "../app-store/tsconfig.json"
    }
  ],
  "include": [".", "../types/next-auth.d.ts", "../types/business-days-plugin.d.ts", "../types/window.d.ts"],
  "exclude": ["dist", "build", "node_modules", "**/*.test.*", "**/__mocks__/*", "**/__tests__/*", "**/*.mock.ts", "**/*.stories.tsx"]
}
