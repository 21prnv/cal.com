{
  "extends": "@calcom/tsconfig/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "types": [],
    "paths": {
      "~/*": ["modules/*"],
      "@components/*": ["components/*"],
      "@pages/*": ["pages/*"],
      "@lib/*": ["lib/*"],
      "@server/*": ["server/*"],
      "@prisma/client/*": ["@calcom/prisma/client/*"]
    },
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    // We should avoid importing all types and instead import them individually in used files
    "../../packages/types/*.d.ts",
    "../../packages/types/next-auth.d.ts",
  ],
  "exclude": ["node_modules", "app", "playwright", "test"],
  "references": [
    {
      "path": "../../packages/ui/tsconfig.json"
    },
    {
      "path": "../../packages/trpc/tsconfig.json"
    },
    {
      "path": "../../packages/app-store/tsconfig.json"
    },
    {
      "path": "../../packages/emails/tsconfig.json"
    },
  ]
}
